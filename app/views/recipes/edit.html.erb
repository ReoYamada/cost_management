<h1>レシピ編集</h1>
<%= form_for(@recipe, url: recipe_path) do |f| %>
  <div>
    <%= f.label :food_id, '食材' %>
    <%= f.collection_select :food_id, @foods.all, :id, :name, { include_blank: '食材を選択してください' } %>
  </div>
  <div>
    <%= f.label :gram, 'グラム数' %>
    <%= f.number_field :gram %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
